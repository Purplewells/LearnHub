  <businessRules>
    <rule id="r102" commandName="New|Update" type="Sql" phase="Execute" name="setIsVarianceAccepted"><![CDATA[if @IsVarianceAccepted IS NULL 
    SET @IsVarianceAccepted = 0]]></rule>
    <rule id="r100" commandName="New" type="Sql" phase="Execute" name="setStockTakeDate"><![CDATA[SET @StockTakeDate = GETDATE()]]></rule>
    <rule id="r103" commandName="Insert|Calculate|Update" type="Sql" phase="After" name="setSystemQuantity"><![CDATA[UPDATE st
SET st.ProductName = p.ProductName
	, st.SystemQuantity = ISNULL( st.SystemQuantity, p.Quantity)
	, st.StockDifference = st.ScannedQuantity - p.Quantity

FROM StockTake st
INNER JOIN Product p on p.ProductID = st.ProductID
WHERE p.ProductID = @ProductID]]></rule>
    <rule id="r101" commandName="Insert|update|calculate" type="Code" phase="Before" name="calculateDifference" />
  </businessRules>
