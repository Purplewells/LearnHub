    <field name="Quantity" type="Int32" label="Ordered Qty" showInSummary="true" />
    <field name="UnitPrice" type="Decimal" dataFormatString="c" label="Unit Price" showInSummary="true" />
    <field name="ExtendedCost" type="Decimal" readOnly="true" dataFormatString="c" label="Extended Cost" computed="true">
