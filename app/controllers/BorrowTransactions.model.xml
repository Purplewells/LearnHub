      <formula><![CDATA[CASE 
      WHEN ReturnDate IS NOT NULL AND ReturnDate > DueDate THEN 'Overdue'
      WHEN DueDate < GETDATE() AND ReturnDate IS NULL THEN 'Overdue'
      ELSE 'Not Overdue'
END]]></formula>
