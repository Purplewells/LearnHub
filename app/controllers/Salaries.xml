  <businessRules>
    <rule id="r100" commandName="New" type="Sql" phase="Execute" name="setDefaultValues"><![CDATA[SET @IsApproved = 1
SET @GrossAmount = 0.00
SET @NetAmount = 0.00
SET @Deductions = 0.00
SET @TaxablePay = 0.00
SET @ProposedDate = GETDATE()
SET @StartDate = GETDATE()
SET @EndDate = DATEADD(YEAR, 10, @StartDate)]]></rule>
    <rule id="r102" type="JavaScript" commandName="Insert|Update" phase="Before" name="validate_StartDate"><![CDATA[var fieldValue = [StartDate];
if (fieldValue == null) {
    // prevent the default action processing
    this.preventDefault();
    // set the focus on the field and display an error
    this.result.focus('StartDate', 'StartDate is a required field.');
}]]></rule>
    <rule id="r103" type="JavaScript" commandName="Insert|Update" phase="Before" name="validate_SalaryName"><![CDATA[var fieldValue = [SalaryName];
